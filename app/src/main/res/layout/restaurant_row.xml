<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="100dp">

    <ImageView
        android:contentDescription="@string/logo_description"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/logo_image_view"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <RatingBar
        android:id="@+id/restaurant_rating"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:numStars="6"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/logo_image_view"
        android:layout_toRightOf="@id/logo_image_view"
        android:layout_toLeftOf="@id/restaurant_rating"
        android:layout_toStartOf="@id/restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/sample_text"
            android:textSize="20sp"
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/sample_text"
            android:textSize="16sp"
            android:id="@+id/restaurant_food_type"
            android:layout_below="@id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

